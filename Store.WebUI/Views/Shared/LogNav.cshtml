@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink(User.Identity.GetUserName(), "Edit", "Account")
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Выход</a></li>
            <li>@Html.ActionLink("Админ Панель", "Index", "Admin")</li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Регистрация", "Register","Account")</li>
        <li>@Html.ActionLink("Вход", "Login", "Account")</li>
    </ul>
}